                        <TableColumn fx:id="columnaBocadillo" prefWidth="200.0" text="Bocadillo" />
                        <TableColumn fx:id="columnaTipo" prefWidth="150.0" text="Tipo" />
                    </columns>
                </TableView>

            </children>
            <BorderPane.margin>
                <Insets top="30.0" />
            </BorderPane.margin>
        </VBox>
    </center>
