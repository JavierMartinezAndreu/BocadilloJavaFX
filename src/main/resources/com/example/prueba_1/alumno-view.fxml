<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="506.0" prefWidth="612.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prueba_1.controllers.AlumnoController">
    <top>
        <HBox prefHeight="100.0" style="-fx-background-color: #4CAF50; -fx-padding: 20px 10px;">
            <children>
                <Label fx:id="mensajeBienvenidaLabel" style="-fx-font-size: 20px;" text="¡Bienvenido!" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="botonCerrarSesion" mnemonicParsing="false" text="CERRAR SESIÓN" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" fillWidth="false" style="-fx-padding: 20px;" BorderPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <children>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-margin-bottom: 10px;" text="Pide tu bocadillo">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin></Label>
                <HBox fx:id="bocadillosHBox" alignment="TOP_CENTER">
                    <!-- Aquí se agregarán dinámicamente los VBox de los bocadillos -->
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
