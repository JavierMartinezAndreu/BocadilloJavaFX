<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prueba_1.controller.AdministradorController">
    <top>
        <HBox prefHeight="100.0" style="-fx-background-color: #4CAF50; -fx-padding: 20px 10px;">
            <children>
                <ImageView fitHeight="150.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../../images/admin_logo.png" />
                    </image>
                </ImageView>
                <Label fx:id="mensajeAdminLabel" style="-fx-font-size: 20px; -fx-text-fill: white;" text="Panel de Administración" HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets left="20.0" top="15.0" />
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="botonCerrarSesion" mnemonicParsing="false" text="CERRAR SESIÓN" HBox.hgrow="NEVER" style="-fx-background-color: #f44336; -fx-text-fill: white;">
                    <HBox.margin>
                        <Insets right="20.0" top="15.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-padding: 20px;" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Gestión de Alumnos y Pedidos">
                <VBox.margin>
                    <Insets bottom="20.0" />
                </VBox.margin>
            </Label>

            <!-- Tabla de alumnos -->
            <TableView fx:id="tablaAlumnos" prefHeight="400.0" prefWidth="700.0">
                <columns>
                    <TableColumn fx:id="columnaId" text="ID" prefWidth="50.0" />
                    <TableColumn fx:id="columnaNombre" text="Nombre" prefWidth="150.0" />
                    <TableColumn fx:id="columnaCurso" text="Curso" prefWidth="100.0" />
                    <TableColumn fx:id="columnaBocadillo" text="Bocadillo" prefWidth="200.0" />
                    <TableColumn fx:id="columnaAcciones" text="Acciones" prefWidth="200.0" />
                </columns>
            </TableView>

            <!-- Botones de gestión -->
            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="botonAgregarAlumno" text="Agregar Alumno" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                <Button fx:id="botonEditarAlumno" text="Editar Alumno" style="-fx-background-color: #FFC107; -fx-text-fill: black;" />
                <Button fx:id="botonEliminarAlumno" text="Eliminar Alumno" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
