<BorderPane prefHeight="849.0" prefWidth="1204.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prueba_1.controller.CocinaController">
